<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="4dp"
        app:cardCornerRadius="4dp"
        android:elevation="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/item_layout"
            android:padding="8dp">

            <TextView
                android:id="@+id/userName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="غزل"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="right" />

            <TextView
                android:id="@+id/userPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="09103538173"
                android:textSize="20sp"
                android:gravity="right"
                android:textColor="@android:color/holo_blue_dark"/>

            <TextView
                android:id="@+id/is_seller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="فروشنده"
                android:textSize="20sp"
                android:gravity="right"
                android:textColor="@android:color/holo_blue_dark"/>
            <TextView
                android:id="@+id/debt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="فروشنده"
                android:textSize="20sp"
                android:gravity="right"
                android:textColor="@android:color/holo_blue_dark"/>
            <TextView
                android:id="@+id/is_creditor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="فروشنده"
                android:textSize="20sp"
                android:gravity="right"
                android:textColor="@android:color/holo_blue_dark"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/changeBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="تغیر مثدار بدهی یا بستانکاری"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/item_change_view"
            android:padding="8dp">
            <EditText
                android:id="@+id/financialEdt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:background="@drawable/background_edt"
                android:hint="مبلغ را به تومان وارد کنید"
                android:gravity="right"
                android:inputType="number"
                android:padding="8dp" />



            <RadioGroup
                android:id="@+id/radio1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:orientation="vertical"
                android:gravity="right">

                <RadioButton
                    android:id="@+id/radioCreditor"
                    android:layoutDirection="rtl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="بستانکار"
                    android:checked="true" />

                <RadioButton
                    android:id="@+id/radioDebtor"
                    android:layoutDirection="rtl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="بدهکار"
                    android:checked="false" />
            </RadioGroup>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/userSubmitBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="ثبت"/>
        </LinearLayout>



        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_primary"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="16dp"
        android:src="@android:drawable/ic_search_category_default"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:clipToPadding="false"/>

    <!--_____________________________Search______________________________-->

    <LinearLayout
        android:id="@+id/date_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_search"
        android:elevation="4dp"
        android:layout_marginHorizontal="8dp"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/startYear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:hint="yyyy"
                android:inputType="number"
                android:background="@drawable/background_edt" />


            <EditText
                android:id="@+id/startMonth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:hint="mm"
                android:inputType="number"
                android:background="@drawable/background_edt" />


            <EditText
                android:id="@+id/startDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:hint="dd"
                android:inputType="number"
                android:background="@drawable/background_edt" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="از"
                android:textSize="25sp"
                android:textColor="@android:color/holo_red_light"
                android:layout_gravity="center"
                android:layout_margin="4dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/endYear"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:hint="yyyy"
                android:inputType="number"
                android:background="@drawable/background_edt" />


            <EditText
                android:id="@+id/endMonth"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:hint="mm"
                android:inputType="number"
                android:background="@drawable/background_edt" />


            <EditText
                android:id="@+id/endtDay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:layout_margin="8dp"
                android:padding="8dp"
                android:hint="dd"
                android:inputType="number"
                android:background="@drawable/background_edt" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="تا"
                android:textSize="25sp"
                android:textColor="@android:color/holo_red_light"
                android:layout_gravity="center"
                android:layout_margin="4dp"/>
        </LinearLayout>



        <com.google.android.material.button.MaterialButton
            android:id="@+id/searchBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="جستجو"/>

    </LinearLayout>

    <!--//___________________________Search____________________________//-->



</androidx.constraintlayout.widget.ConstraintLayout>
